.title {
  margin: 60rpx 40rpx 0 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title-label {
  font-size: 38rpx;
  font-weight: bold;
}

.title-btn {
  width: 140rpx;
  height: 48rpx;
  line-height: 48rpx;
  background-color: dodgerblue;
  text-align: center;
  font-size: 28rpx;
  float: right;
  color: white;
  border-radius: 12rpx;
}

.card-list {
  background-color: #fff;
  margin: 20rpx 30rpx 0 30rpx;
  width: 690rpx;
  padding: 20rpx 0;
}

joined-group-card {
  margin-bottom: 30rpx;
}

input {
  margin: 20rpx;
  border: 2rpx solid dimgray;
}

.placeholder {
  text-align: center;
}