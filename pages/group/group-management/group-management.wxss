/* pages/group/group-management/group-management.wxss */
.section {
  width: 630rpx;
  margin: 30rpx;
  padding: 30rpx;
  background-color: #fff;
  box-shadow: 2rpx 2rpx 32rpx #e2e2e2;
  border-radius: 6rpx
}

.section-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 20rpx;
}

.head-title {
  font-size: 40rpx;
  font-weight: 700;
}

.info-item {
  margin: 10rpx 0;
  font-size: 32rpx;
}

.section view:last-child {
  margin-bottom: 0;
}

button {
  font-size: 14px !important;
}
