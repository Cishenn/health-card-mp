/* pages/group/unchecked-list/unchecked-list.wxss */
.unchecked-section {
  width: 690rpx;
  margin: 40rpx auto 130rpx auto;
  background-color: #fff;
  box-shadow: 2rpx 2rpx 32rpx #e2e2e2;
  padding-bottom: 40rpx;
}

.reminder {
  position: fixed;
  background-color: #169bd5;
  height: 90rpx;
  width: 260rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: white;
  line-height: 90rpx;
  text-align: center;
  bottom: 0;
  left: 245rpx;
}

.unchecked-title {
  font-size: 40rpx;
  padding: 30rpx;
}

.unchecked-list-item {
  font-size: 32rpx;
  padding: 16rpx 0 0 30rpx;
}

button::after {
  border: 0;
  border-radius: 0;
}
