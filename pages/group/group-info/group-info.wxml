<view class="container">
<!-- 获得小组姓名并显示在此 -->
    <van-row
    class="groupName"
    value="{{groupInfo.Name}}">
    </van-row>

    <van-cell-group>
    <van-cell
    class="text"
    title="创建人"
    value="{{groupInfo.creatorName}}">
    </van-cell>

    <van-cell
    class="text"
    title="邀请码"
    value="{{groupInfo.invitationCodes}}">
    </van-cell>

    <van-cell
    class="text"
    title="简介"
    value="{{groupInfo.introduction}}">
    </van-cell>
    </van-cell-group>

    <van-button
    class="application"
    type="primary"
    bindtap="applyTo">
    申请加入小组
    </van-button>
</view>
 
<van-dialog
  id="dialog"
  title="加入小组"
  bind:confirm="confirmTo">
  <van-cell-group>
    <van-field
    placeholder="请输入真实姓名"
    label="姓名"
    value="{{personalName}}"
    bind:change="getName"/>
    <van-field
    palceholder="请输入手机号"
    label="手机号"
    bind:change="getPhone"
    value="{{personalPhone}}"/>
  </van-cell-group>
</van-dialog>
