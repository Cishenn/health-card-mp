/* components/group-card/managed-group-card/managed-group-card.wxss */
.card {
  width: 650rpx;
}

.card-body {
  background-color: #ccffff;
  width: 610rpx;
  height: 140rpx;
  margin: 20rpx 0;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  border-radius: 12rpx;
}

.group-name {
  font-size: 38rpx;
  font-weight: bold;
}

.group-id {
  font-size: 28rpx;
}
.group-id text ::before {
  content: "邀请码：";
}

.card-foot {
  margin: 10rpx 60rpx 30rpx 60rpx;
  font-size: 28rpx;
  overflow: hidden;
}

.left {
  float: left;
  font-size: 28rpx;
}

.right {
  float: right;
  font-size: 28rpx;
}

button{
  line-height: 28rpx;
  margin: 0;
  padding: 14rpx 20rpx;
}
button::after{
  border:none;
}
input{
  outline:none;
  border:none;
  list-style: none;
}
