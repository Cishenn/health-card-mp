/* components/group-card/managed-group-card/managed-group-card.wxss */
.card {
  width: 650rpx;
  color: #282828;
}

.card-body {
  background-color: rgba(25, 137, 250, 0.1);
  width: 610rpx;
  height: 140rpx;
  margin: 20rpx 0;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  border-radius: 12rpx;
  position: relative;
}

.arrow {
  font-size: 48rpx;
  font-weight: lighter;
  color: darkgray;
  height: 140rpx;
  line-height: 140rpx;
  position: absolute;
  right: 0;
}

.group-name {
  font-size: 38rpx;
  font-weight: 600;
}

.group-id {
  font-size: 32rpx;
  color: #707070;
}
.group-id text ::before {
  content: "邀请码：";
  color: #707070;
}

.card-foot {
  margin: 10rpx 60rpx 40rpx 60rpx;
  font-size: 28rpx;
  overflow: hidden;
}

.left {
  float: left;
}

.right {
  float: right;
}

.left button, .right button {
  font-size: 28rpx !important;
  color: #353535 !important;
}
